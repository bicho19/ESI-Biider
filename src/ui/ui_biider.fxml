    <top>
        <ToolBar fx:id="toolBar" onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed" BorderPane.alignment="CENTER">
            <items>
                <fx:define>
                    <Image fx:id="btnImage" url="/ui/images/close.png" />
                </fx:define>
                <Button fx:id="btnMaxim" alignment="TOP_RIGHT" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" nodeOrientation="RIGHT_TO_LEFT">
                            <image>
                                <Image url="/ui/images/minim.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnMinim" alignment="TOP_RIGHT" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" nodeOrientation="RIGHT_TO_LEFT">
                            <image>
                                <Image url="/ui/images/maxim.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnUiClose" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#closeButtonAction">
                    <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" nodeOrientation="RIGHT_TO_LEFT">
                            <image>
                                <Image url="/ui/images/close.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
    </top>
    <left>
        <VBox id="vbox" alignment="TOP_CENTER" prefHeight="376.0" prefWidth="130.0" BorderPane.alignment="CENTER">
            <children>
                <Button id="buttonUI" mnemonicParsing="false" prefHeight="50.0" prefWidth="130.0" text="Rechercher" />
                <Button id="buttonUI" mnemonicParsing="false" onAction="#onAjouterAction" prefHeight="50.0" prefWidth="130.0" text="Ajouter" />
                <Button id="buttonUI" mnemonicParsing="false" prefHeight="50.0" prefWidth="130.0" text="Supprimer" />
                <Button id="buttonUI" mnemonicParsing="false" prefHeight="50.0" prefWidth="130.0" text="Modifier" />
            </children>
        </VBox>
    </left>
    <center>
        <GridPane id="gridpane" alignment="CENTER" prefHeight="289.0" prefWidth="348.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" maxWidth="236.0" minWidth="10.0" prefWidth="195.0" />
            <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" maxWidth="236.0" minWidth="9.0" prefWidth="23.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="330.0" minWidth="10.0" prefWidth="228.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="330.0" minWidth="10.0" prefWidth="26.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
