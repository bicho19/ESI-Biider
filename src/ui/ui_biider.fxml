                <TextField promptText="ex: Aymen" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField promptText="ex: 01/01/1995" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField promptText="ex: Sidi Bel Abbes" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <TextField promptText="ex: Rue de ..." GridPane.columnIndex="2" GridPane.rowIndex="5" />
                <Button mnemonicParsing="false" text="Parcourir" GridPane.columnIndex="2" GridPane.rowIndex="6" />
