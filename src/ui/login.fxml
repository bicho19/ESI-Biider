<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.Image?>
<BorderPane
        prefHeight="250" prefWidth="400" xmlns="http://javafx.com/javafx/null" fx:controller="controllers.login_controller"
        xmlns:fx="http://javafx.com/fxml/1" >
    <top>
        <ToolBar fx:id="toolBar" onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed"
                 prefHeight="57.0" prefWidth="350.0" BorderPane.alignment="CENTER">
            <items>
                <Pane>
                    <fx:define>
                        <Image fx:id="btnImage" url="/ui/images/close.png" />
                    </fx:define>
                    <JFXButton fx:id="btnClose" LayoutX="350" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#closeButtonAction"
                               buttonType="RAISED">
                        <graphic>
                            <ImageView fitHeight="15.0" fitWidth="15.0" nodeOrientation="RIGHT_TO_LEFT">
                                <image>
                                    <Image url="/ui/images/close.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </JFXButton>
                    <ImageView fitHeight="47.0" fitWidth="200.0" pickOnBounds="true" smooth="false">
                        <image>
                            <Image url="@../../../Desktop/Untitled-2.png" />
                        </image>
                    </ImageView>
                </Pane>
            </items>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <JFXTextField fx:id="usernameField" prefHeight="40" promptText="Username">
                    <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                    </VBox.margin>
                </JFXTextField>
                <JFXPasswordField fx:id="passwordField" promptText="Password">
                    <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                    </VBox.margin>
                </JFXPasswordField>
                <HBox alignment="CENTER_LEFT" fillHeight="false">
                    <children>
                        <JFXButton fx:id="btnLogin" mnemonicParsing="false" buttonType="RAISED" prefHeight="25.0" prefWidth="100.0"
                                   style="-fx-text-fill:WHITE;-fx-background-color:#4CAF50;-fx-font-size:14px;"
                                   text="Login" defaultButton="true" onAction="#handleLogin">
                        </JFXButton>
                        <Label alignment="CENTER_LEFT" text="Forgot ?">
                            <HBox.margin>
                                <Insets left="150" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="50.0" right="40.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="0" left="0" right="0" top="0" />
            </padding>
        </VBox>
    </center>
    <top>

    </top>
</BorderPane>