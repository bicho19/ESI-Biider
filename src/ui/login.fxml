<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<BorderPane onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed"
            prefHeight="250" prefWidth="400" xmlns="http://javafx.com/javafx/null"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.login_controller">
    <center>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="usernameField" promptText="Username">
                    <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="passwordField" prefHeight="35" prefWidth="150" promptText="Password">
                    <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                    </VBox.margin>
                </PasswordField>
                <HBox alignment="CENTER_LEFT" fillHeight="false">
                    <children>
                        <Button fx:id="btnLogin" mnemonicParsing="false"
                                prefHeight="25.0" prefWidth="100.0" text="Login"
                                onAction="#handleLogin" defaultButton="true">
                            <HBox.margin>
                                <Insets left="40" />
                            </HBox.margin>
                        </Button>
                        <Label alignment="CENTER_LEFT" text="Forgot ?">
                            <HBox.margin>
                                <Insets left="165" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="0" left="0" right="0" top="0" />
            </padding>
        </VBox>
    </center>
    <top>
        <ToolBar fx:id="toolBar" onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed"
                 BorderPane.alignment="TOP_RIGHT" style="-fx-tile-alignment: center">
            <items>
                <Pane>
                    <Button fx:id="btnClose" onAction="#closeButtonAction" layoutX="354">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" nodeOrientation="RIGHT_TO_LEFT">
                                <image>
                                    <Image url="/ui/images/close.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <fx:define>
                        <Image fx:id="btnImage" url="/ui/images/close.png" />
                    </fx:define>
                    <Label fx:id="Biider" id="Biider" text="Biider" alignment="CENTER" layoutX="160">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Label>
                </Pane>
            </items>
            <BorderPane.margin>
                <Insets bottom="0" left="0" right="0" top="0" />
            </BorderPane.margin>
        </ToolBar>
    </top>
</BorderPane>
