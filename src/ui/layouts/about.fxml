<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>

<BorderPane onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.about_controller" stylesheets="/ui/style/style_about.css">
    <top>
        <fx:include source="communs/toolbar.fxml" fx:id="toolBar"/>
    </top>
    <left>
        <fx:include source="communs/left_list.fxml"/>
    </left>

    <center>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Biider" />
                <TextArea editable="false" prefHeight="200.0"
                          prefWidth="200.0" text="Biider is a simple software that &#10;includes face recognition.&#10;&#10;Version 1.0" />
            </children>
        </Pane>
    </center>
    <bottom>
        <fx:include source="communs/bottom.fxml"/>
    </bottom>
</BorderPane>
